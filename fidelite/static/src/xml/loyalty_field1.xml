<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="customLoyalty" t-inherit="point_of_sale.ClientDetailsEdit" owl="1" t-inherit-mode="extension">
        <xpath expr="//section[hasclass('client-details')]//input[@name='name']" position="after">

            <div class="client-detail">
                <span class="label">Loyalty</span>
                <input class="detail client-loyalty" name="loyalty"
                       t-on-change="captureChange" t-att-value="props.partner.loyalty || 0"
                       placeholder="0"/>
            </div>
        </xpath>
    </t>

    <t t-name="ClientListScreenNew" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//table[hasclass('client-list')]" position="replace">
            <table class='client-list'>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th t-if="!env.isMobile">Address</th>
                        <th t-if="!env.isMobile">Phone</th>
                        <th t-if="env.isMobile">ZIP</th>
                        <th>Email</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody class='client-list-contents'>

                </tbody>
            </table>
        </xpath>
    </t>

    <t t-name="ClientLine" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">

        <xpath expr="//tbody[hasclass('client-list-contents')]" position="replace">

            <tbody class="client-list-contents">
                <t t-foreach="clients" t-as="partner" t-key="partner.id">
                    <ClientLine partner="partner"
                                selectedClient="state.selectedClient"
                                detailIsShown="state.detailIsShown"
                                t-on-click-client="clickClient"/>
                </t>
            </tbody>

        </xpath>
    </t>
    <t t-name="customLoyaltySum" t-inherit="point_of_sale.OrderWidget" owl="1" t-inherit-mode="extension">
         <xpath expr="//div[hasclass('order-container')]//div[hasclass('order')]//t[@t-else='']" position="inside">
            <div style="width:120px; length:170px; color:#32CD32;margin-left:30px;margin-top:-60px;text-align:center;" class="cadre-point">
                <span class="badge display-point"> </span>
                <span class="value loyalty-operation"></span>
                <br></br>
                <span class="value loyalty-total"></span>
                <span class="value">
                    <t t-esc="props.total"/>
                </span>
            </div>
        </xpath>
    </t>

    <t t-name="ClientLine-loyalty" t-inherit="point_of_sale.ClientLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-name='ClientLine']/tr/td[hasclass('client-line-email')]" position="after">
            <td>
                <t t-esc="props.partner.loyalty or ''"/>
                <span t-if="highlight"><br/></span>
            </td>
        </xpath>
    </t>


</templates>
