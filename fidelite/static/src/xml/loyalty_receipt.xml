<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
    	<xpath expr="//div[@class='pos-receipt']//t[@t-if='isTaxIncluded']" position="inside">
    		<t t-if='receipt.client'>
                <span>--------------------</span>
                <div style="margin-top:10px;">
                    <span>
                        Points de fidélité
                        <br></br>
                        <t t-esc='receipt.client.name' class="pos-receipt-right-align"/>
                    </span>
                    <br></br>
                    <span style="margin-top:25px;">
                        Points gagnés:<span class="pos-receipt-right-align"> <t t-esc='receipt.subtotal'/></span>
                    </span>
                    <br></br>
                    <span style="margin-top:8px;">
                        <p t-if="env.pos.remiseAjoute==100">
                            précédent solde de points:<span class="pos-receipt-right-align"> <t t-esc='((receipt.client.loyalty + 100000) - receipt.subtotal)'/></span>
                        </p>
                        <p t-else="env.pos.remiseAjoute!=100">
                            précédent solde de points:<span class="pos-receipt-right-align"> <t t-esc='(receipt.client.loyalty - receipt.subtotal)'/></span>
                        </p>
                    </span>
                    <span style="margin-top:8px;">
                        <t t-if="env.pos.remiseAjoute==100">
                            Points dépensés:<span class="pos-receipt-right-align"><t t-esc='env.pos.ticket_min_point'/></span>
                            <br></br>
                        </t>
                    </span>
                    <span style="margin-top:18px;">
                        Nouveau solde de points:<span class="pos-receipt-right-align"> <t t-esc='receipt.client.loyalty' class="pos-receipt-right-align"/></span>
                    </span>
                </div>
            </t>
    	</xpath>
    </t>
</templates>