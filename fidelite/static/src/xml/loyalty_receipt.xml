<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
    	<xpath expr="//div[@class='pos-receipt']//t[@t-if='isTaxIncluded']" position="inside">
    		<t t-if='receipt.client'>
                <span>--------------------</span>
                <div style="margin-top:10px;">
                    <span>
                        Points de fidélité
                        <br></br>
                        <t t-esc='receipt.client.name' class="pos-receipt-right-align"/>
                    </span>
                    <br></br>
                    <span style="margin-top:15px;">
                        Points gagnés: <t t-esc='receipt.subtotal' class="pos-receipt-right-align"/>
                    </span>
                    <br></br>
                    <span style="margin-top:7px;">
                        <t t-if="env.pos.remiseAjoute==100">
                            Points dépensés: 100000
                        </t>
                    </span>
                    <br></br>
                    <span style="margin-top:7px;">
                        Total des Points: <t t-esc='receipt.client.loyalty' class="pos-receipt-right-align"/>
                    </span>
                </div>
            </t>
    	</xpath>
    </t>
</templates>