<?xml version="1.0" encoding="UTF-8" ?>
<templates id="override_payment_back_btn" xml:space="preserve">
    <t t-name="payment_back_btn" t-inherit="point_of_sale.PaymentScreen" owl="1" t-inherit-mode="extension">
       <xpath expr="//div[hasclass('payment-screen')]//div[hasclass('screen-content')]//t[@t-if='!env.isMobile']//div[hasclass('top-content')]//div[hasclass('back')]" position="replace">
           <div class="button back"
                t-on-click="showScreen('ProductScreen')">
                <i class="fa fa-angle-double-left fa-fw"></i>
                <span class="back_text" t-on-click="add_points">Back</span>
           </div>
       </xpath>
    </t>

</templates>