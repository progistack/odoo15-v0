<?xml version="1.0" encoding="UTF-8"?>
<templates id="templatePayment" xml:space="preserve">
    <t t-name="btn-validate" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-screen')]//div[hasclass('screen-content')]//t[@t-if='!env.isMobile']//div[hasclass('top-content')]//div[hasclass('next')]" position="replace">
            <div class="button next" t-att-class="{ highlight: currentOrder.is_paid() and _isValidEmptyOrder() }" t-on-click="validateOrder1(false)">
                <span class="next_text">Validate</span>
                <i class="fa fa-angle-double-right fa-fw"></i>
            </div>
        </xpath>

    </t>

</templates>