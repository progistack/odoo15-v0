<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="programme_fidelite_tree" model="ir.ui.view">
        <field name="name">Programmes de fidélité</field>
        <field name="model">programme.loyalty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_programme" string="Nom du programme de fidélité" required="1"/>
            </tree>
        </field>
    </record>

    <record id="loyalty_reward_tree" model="ir.ui.view">
        <field name="name">Programmes de fidélité</field>
        <field name="model">loyalty.reward</field>
        <field name="arch" type="xml">
            <tree create="true">
                <field name="name" string="Nom"/>
                <field name="type_reward" string="Type de recompense"/>
                <field name="cost_reward" string="Coût de la recompense"/>
            </tree>
        </field>
    </record>
    <record id="programme_fidelite_form" model="ir.ui.view">
        <field name="name">Programmes de fidélité</field>
        <field name="model">programme.loyalty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name_programme" string="Nom du programme de fidélité" required="1"/>
                            <field name="point_franc" required="1" string="Point par franc"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Récompense">
                            <p>
                                Récompensez le client avec des cadeaux ou des réductions en échange de ses points de fidélité
                            </p>
                            <field name="loyalty_reward_id" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loyalty_reward_form" model="ir.ui.view">
        <field name="name">Programmes de fidélité</field>
        <field name="model">loyalty.reward</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Nom de la récompense"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <div style="height:10px">
                    </div>
                    <group>
                        <field name="cost_reward" string="Coût de la recompense" required="0" style="margin-left:-280px"  />
                        <div style="height:15px">
                        </div>
                        <field name="minimum_point" required="0" string="Nombre de point minimun" style="margin-left:-280px;,length:1000px"/>
                    </group>
                    <!--style="margin-right:30px;"-->
                    <div style="height:15px">
                    </div>
                    <group>
                        <group>
                            <field name="type_reward" string="Récompense" widget="radio"/>
                            <field name="discount_product_id" string="Article de remise"/>
                        </group>
                        <group>
                            <field name="discount_type" string="Appliquer la remise" style="margin-left:-90px;"/>
                            <div style="height:15px">
                            </div>
                            <field name="amount_fexed" string="Montant fixe" style="margin-left:-90px;"/>
                            <div style="height:15px">
                            </div>
                            <field name="minimal_amount" string="Montant minimal" style="margin-left:-90px;"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_programme_fidelite_form" model="ir.actions.act_window">
        <field name="name">Programmes de fidélité</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">programme.loyalty</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="programme_fidelite_tree"/>
    </record>
    <menuitem name="Programmes de fidélité" id="programme_fidelete"
              parent="point_of_sale.pos_config_menu_catalog"
              action="action_programme_fidelite_form"
              sequence="30"/>
</odoo>