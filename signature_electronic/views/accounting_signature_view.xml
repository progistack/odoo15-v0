<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="inherited_account_payment_form" model="ir.ui.view">
        <field name="name">inherited.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='destination_journal_id']" position="after">
                <label for="digital_signature" string="Signature" class="oe_edit_only" />
                <h2>
                    <field name="digital_signature" widget="signature"/>
                    <span>Fait à Abidjan le <field name="date_signature" readonly="1"/></span>
                </h2>

            </xpath>
        </field>
    </record>

    <record id="inherited_hr_expense_form" model="ir.ui.view">
        <field name="name">inherited.hr.expense.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="before">
                <group>
                    <label for="digital_signature" string="Signature" class="oe_edit_only" />
                    <h2>
                        <field name="digital_signature" widget="signature"/>
                        <span>Fait à Abidjan le <field name="date_signature" readonly="1"/></span>
                     </h2>
                </group>

            </xpath>
        </field>
    </record>


</odoo>
